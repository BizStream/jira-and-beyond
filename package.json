{
  "name": "jira-to-solo",
  "version": "1.0.0",
  "description": "",
  "main": "scripts/content.js",
  "scripts": {
    "build-css": "postcss popup/styles.css -o dist/css/styles.css",
    "watch-css": "postcss popup/styles.css -o dist/css/styles.css --watch",
    "test": "mocha --experimental-modules 'test/**/*.test.js'",
    "coverage": "nyc mocha"
  },
  "nyc": {
    "include": [
      "popup/**/*.js",
      "scripts/**/*.js"
    ],
    "exclude": ["test/**/*.js", "node_modules/**/*", "dist/**/*", "coverage/**/*"],
    "reporter": [
      "text",
      "html"
    ],
    "all": true,
    "cache": true,
    "check-coverage": true,
    "lines": 80,
    "statements": 80,
    "functions": 80,
    "branches": 80
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "autoprefixer": "^10.4.19",
    "chai": "^5.1.1",
    "chokidar-cli": "^3.0.0",
    "chrome-remote-interface": "^0.33.0",
    "mocha": "^10.4.0",
    "nodemon": "^3.1.1",
    "nyc": "^15.1.0",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.0",
    "sinon": "^18.0.0",
    "sinon-chrome": "^3.0.1",
    "tailwindcss": "^3.4.3"
  },
  "dependencies": {
    "@testing-library/react": "^15.0.7",
    "jsdom": "^24.1.0",
    "lottie-web": "^5.12.2"
  }
}
